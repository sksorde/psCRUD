        <a href="#LocalTriage">Local Triage</a>
    </div>

    <div class="container">
        
        <h1>Incident List</h1>
        <% if(employees.length>0) { %>
        <table class="list-table">
            <thead>
                <tr>
                    <th>Raised By</th>
                    <th>Location</th>
                    <th>Team Leader</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i
                <employees.length;i++) { %>
                    <tr>
                        <td><a href="/incident/show/<%= employees[i]._id%>"><%= employees[i].raisedby%></a></td>
                        <td><%= employees[i].location%></td>
                        <td><%= employees[i].teamleader%></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <% } else { %>
        <div>No Incident found.</div>
        <% } %>
    </div>
</body>
</html>
